{
  "name": "seeds-game",
  "version": "1.0.0",
  "description": "A connect the dots game with seeds",
  "scripts": {
    "deploy": "npm run build && firebase deploy",
    "dev": "npm run elm-dev & npm run css-dev & npm run js-dev",
    "build": "npm run elm-build && npm run js-build && npm run css-build",
    "elm-dev": "elm-live src/elm/App.elm --output=public/main.js --dir=public --open --debug --pushstate",
    "elm-build": "elm-make src/elm/App.elm --output=public/main.js && npm run compress-main",
    "css-dev": "postcss --watch --config ./postcss-config.js",
    "css-build": "postcss --config ./postcss-config.js",
    "js-dev": "watchify src/js/embed.js -o public/embed.js -v",
    "js-build": "browserify src/js/embed.js -o public/embed.js",
    "compress-main": "uglifyjs -c -m -o public/main.js public/main.js",
    "test": "cd ./test && elm-test App.elm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewMacmurray/seeds-game.git"
  },
  "author": "Andrew MacMurray",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrewMacmurray/seeds-game/issues"
  },
  "homepage": "https://github.com/andrewMacmurray/seeds-game#readme",
  "dependencies": {
    "bounce.js": "^0.8.2",
    "elm": "^0.18.0",
    "gsap": "^1.20.4",
    "tachyons-custom": "^4.5.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.3",
    "browserify": "^14.4.0",
    "elm-live": "^2.7.4",
    "postcss-clean": "^1.0.2",
    "postcss-cli": "^2.6.0",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-import": "^9.1.0",
    "uglify-js": "^3.3.16",
    "watchify": "^3.9.0"
  }
}
